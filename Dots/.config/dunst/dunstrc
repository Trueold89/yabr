    ############

    width = 250
    height = 120
    origin = top-right
    offset = 10x50
    scale = 0
    notification_limit = 3
    corner_radius = 12

    ###############
    # ProgressBar #
    ###############

    progress_bar = false
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0

    #############
    # Different #
    #############

    icon_corner_radius = 6
    indicate_hidden = yes
    transparency = 20
    sort = yes
    markup = full
    show_age_threshold = 25
    ellipsize = middle
    ignore_newline = no
